@{
    ViewBag.Title = "Welcome to CinemaWebApp!";
}

<div class="position-relative text-center text-white" style="background: url('../../wwwroot/images/cinema-panoramic-megeve.jpg') center/cover no-repeat; height: 60vh;">
    <div class="position-absolute top-50 start-50 translate-middle">
        <h1 class="display-3 fw-bold text-shadow">@ViewBag.Title</h1>
        <p class="lead text-light">Discover the best cinemas and movies tailored for your entertainment.</p>
        <div class="mt-4">
            <a asp-controller="Cinema" asp-action="Index" class="btn btn-primary btn-lg me-2 px-4 py-2 rounded-pill shadow-lg">
                <i class="bi bi-camera-reels"></i> Explore Cinemas
            </a>
            <a asp-controller="Movie" asp-action="Index" class="btn btn-primary btn-lg px-4 py-2 rounded-pill shadow-lg">
                <i class="bi bi-film"></i> Browse Movies
            </a>
        </div>
    </div>
</div>

<div class="container my-5">
    <h2 class="text-center fw-bold mb-4">Popular Choices</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body text-center p-4">
                    <h5 class="card-title fw-bold">🏆 Featured Cinema: <span class="text-primary">Cinema City Sofia</span></h5>
                    <p class="card-text text-muted">Voted as the best cinema experience this month.</p>
                    <small class="text-muted">Over 10,000 visitors last month.</small>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body text-center p-4">
                    <h5 class="card-title fw-bold">🎬 Movie of the Month: <span class="text-danger">Dune: Part Two</span></h5>
                    <p class="card-text text-muted">The sci-fi epic that has everyone talking!</p>
                    <small class="text-muted">Rated ★★★★★ (9.2/10 IMDB)</small>
                </div>
            </div>
        </div>
    </div>
</div>
