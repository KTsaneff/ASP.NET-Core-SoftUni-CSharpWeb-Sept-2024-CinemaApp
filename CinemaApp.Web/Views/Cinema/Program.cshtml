@using CinemaApp.Web.ViewModels.Movie
@model IEnumerable<MovieUserProgramViewModel>

@{
    ViewData["Title"] = "Cinema Program";
}

<div class="cinema-bg bg-dark text-light">
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="text-light fw-bold">Now Showing @@ @ViewData["CinemaData"]</h1>
            <a asp-controller="Cinema" asp-action="Index" class="btn btn-secondary fw-bold">
                <i class="bi bi-arrow-left"></i> Back to Cinemas
            </a>
        </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3" id="movieContainer">
            @foreach (var movie in Model)
            {
                <div class="col movie-card">
                    <div class="card shadow-lg border-0 rounded-3 h-100 cinema-program-card">
                        <img src="@movie.ImageUrl"
                             class="movie-card-img-top"
                             alt="@movie.Title"
                             style="height: 200px; object-fit: cover; border-radius: 8px 8px 0 0;">
                        <div class="card-body text-center">
                            <h6 class="card-title fw-bold text-dark">@movie.Title</h6>
                            <p class="card-text text-muted small">Director: @movie.Director</p>
                            <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id"
                               class="btn btn-outline-primary btn-sm rounded-pill px-3">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="movieDetailsModal" tabindex="-1" aria-labelledby="movieDetailsLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="movieDetailsLabel">Movie Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="movieDetailsContent">
                    <!-- Movie details will be loaded here via AJAX -->
                </div>
            </div>
            <div class="modal-footer">
                @if (User.Identity.IsAuthenticated)
                {
                    <button id="buyTicketBtn" class="btn btn-success">Buy Ticket</button>
                    <button id="addToWatchlistBtn" class="btn btn-warning">Add to Watchlist</button>
                }
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/movies.js"></script>
    <script src="~/js/pagination.js"></script>
}

<link rel="stylesheet" href="~/css/user.css">
