@using CinemaApp.Web.ViewModels.Cinema
@model IEnumerable<CinemaIndexViewModel>

@{
    ViewData["Title"] = "Cinemas";
}

<div class="container mt-4">
    <h2 class="text-center fw-bold text-primary">Cinemas</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover border rounded shadow-sm">
            <thead class="table-dark text-uppercase">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Location</th>
                    <th scope="col" class="text-center">Program</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cinema in Model)
                {
                    <tr>
                        <td class="align-middle">@cinema.Name</td>
                        <td class="align-middle">@cinema.Location</td>
                        <td class="text-center align-middle">
                            <a asp-controller="Cinema" asp-action="ViewProgram" asp-route-id="@cinema.Id"
                               class="btn btn-primary btn-sm fw-bold shadow-sm px-3">
                                <i class="bi bi-eye me-1"></i> View Program
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
