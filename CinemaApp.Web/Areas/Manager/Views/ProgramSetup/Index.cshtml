@model List<CinemaApp.Web.ViewModels.Movie.ProgramSetupViewModel>

@{
    ViewData["Title"] = "Manage Cinema Program";
    var cinemaId = ViewBag.CinemaId;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-6 text-warning fw-bold">Manage Cinema Program</h1>
        <a asp-area="Manager" asp-controller="ConfigureCinemas" asp-action="Index" class="btn btn-secondary fw-bold">
            <i class="bi bi-arrow-left"></i> Back to Cinemas
        </a>
    </div>

    <form method="post" asp-action="SaveProgramChanges">
        <input type="hidden" name="CinemaId" value="@cinemaId" />

        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle" id="moviesTable">
                <thead>
                    <tr>
                        <th style="width: 10%;">Poster</th>
                        <th style="width: 40%;">Movie Title</th>
                        <th style="width: 20%;">Duration</th>
                        <th style="width: 20%;" class="text-center">Include in Program</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                <img src="@Model[i].PosterUrl" class="img-fluid rounded" alt="Movie Poster" style="max-height: 100px;">
                            </td>
                            <td class="fw-bold">@Model[i].Title</td>
                            <td>@Model[i].Duration min</td>
                            <td class="text-center">
                                <input type="hidden" name="Movies[@i].MovieId" value="@Model[i].MovieId" />
                                <input type="hidden" name="Movies[@i].Title" value="@Model[i].Title" />
                                <input type="hidden" name="Movies[@i].Duration" value="@Model[i].Duration" />

                                <div class="form-check form-switch d-inline-block">
                                    <input type="hidden" name="Movies[@i].IsIncluded" value="false" />

                                    <input class="form-check-input toggle-switch"
                                           type="checkbox"
                                           name="Movies[@i].IsIncluded"
                                           value="true"
                                    @(Model[i].IsIncluded ? "checked" : "") />
                                    <label class="form-check-label ms-2">
                                        @if (Model[i].IsIncluded)
                                        {
                                            <span class="text-success">Included</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Not Included</span>
                                        }
                                    </label>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-end mt-3">
            <button type="submit" class="btn btn-primary fw-bold" id="submitButton" disabled>
                <i class="bi bi-save"></i> Submit Changes
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/programSetup.js"></script>
}
